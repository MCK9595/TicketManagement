@code {
    [Parameter] public Guid TicketId { get; set; }

    private TicketDetailDto? ticket;
    private bool isLoading = true;
    private bool showEditTicketModal = false;
    private bool showAddCommentModal = false;
    private bool showChangeStatusModal = false;
    private bool showChangePriorityModal = false;
    private bool isUpdatingTicket = false;
    private bool isAddingComment = false;
    private bool isChangingStatus = false;
    private bool isChangingPriority = false;

    private EditTicketFormModel editTicketForm = new();
    private AddCommentFormModel addCommentForm = new();
    private ChangeStatusFormModel changeStatusForm = new();
    private ChangePriorityFormModel changePriorityForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTicket();
    }

    private async Task LoadTicket()
    {
        try
        {
            var response = await ApiClient.GetTicketAsync(TicketId);
            if (response?.Success == true && response.Data != null)
            {
                ticket = response.Data;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading ticket {TicketId}", TicketId);
        }
        finally
        {
            isLoading = false;
        }
    }


    private void ShowEditTicketModal()
    {
        if (ticket != null)
        {
            editTicketForm = new EditTicketFormModel
            {
                Title = ticket.Title,
                Description = ticket.Description,
                Status = ticket.Status.ToString(),
                Priority = ticket.Priority.ToString()
            };
            showEditTicketModal = true;
        }
    }

    private void HideEditTicketModal()
    {
        showEditTicketModal = false;
        editTicketForm = new EditTicketFormModel();
    }

    private void ShowAddCommentModal()
    {
        addCommentForm = new AddCommentFormModel();
        showAddCommentModal = true;
    }

    private void HideAddCommentModal()
    {
        showAddCommentModal = false;
        addCommentForm = new AddCommentFormModel();
    }

    private async Task UpdateTicket()
    {
        if (ticket == null) return;

        isUpdatingTicket = true;
        try
        {
            var updateDto = new UpdateTicketDto
            {
                Title = editTicketForm.Title,
                Description = editTicketForm.Description,
                Status = Enum.Parse<TicketManagement.Core.Enums.TicketStatus>(editTicketForm.Status),
                Priority = Enum.Parse<TicketManagement.Core.Enums.TicketPriority>(editTicketForm.Priority)
            };

            var response = await ApiClient.UpdateTicketAsync(TicketId, updateDto);
            if (response?.Success == true)
            {
                HideEditTicketModal();
                await LoadTicket();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating ticket {TicketId}", TicketId);
        }
        finally
        {
            isUpdatingTicket = false;
        }
    }

    private async Task AddComment()
    {
        isAddingComment = true;
        try
        {
            var createDto = new CreateCommentDto
            {
                Content = addCommentForm.Content
            };

            var response = await ApiClient.AddCommentAsync(TicketId, createDto);
            if (response?.Success == true)
            {
                HideAddCommentModal();
                await LoadTicket();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error adding comment to ticket {TicketId}", TicketId);
        }
        finally
        {
            isAddingComment = false;
        }
    }

    private string GetStatusColor(TicketManagement.Core.Enums.TicketStatus status)
    {
        return status switch
        {
            TicketManagement.Core.Enums.TicketStatus.Open => "primary",
            TicketManagement.Core.Enums.TicketStatus.InProgress => "warning",
            TicketManagement.Core.Enums.TicketStatus.Review => "info",
            TicketManagement.Core.Enums.TicketStatus.Closed => "success",
            TicketManagement.Core.Enums.TicketStatus.OnHold => "secondary",
            _ => "dark"
        };
    }

    private string GetPriorityColor(TicketManagement.Core.Enums.TicketPriority priority)
    {
        return priority switch
        {
            TicketManagement.Core.Enums.TicketPriority.Low => "secondary",
            TicketManagement.Core.Enums.TicketPriority.Medium => "primary",
            TicketManagement.Core.Enums.TicketPriority.High => "warning",
            TicketManagement.Core.Enums.TicketPriority.Critical => "danger",
            _ => "dark"
        };
    }

    private void HandleEditModalBackdropClick()
    {
        HideEditTicketModal();
    }

    private void HandleCommentModalBackdropClick()
    {
        HideAddCommentModal();
    }

    private void ShowChangeStatusModal()
    {
        if (ticket != null)
        {
            changeStatusForm = new ChangeStatusFormModel
            {
                Status = ticket.Status.ToString()
            };
            showChangeStatusModal = true;
            Logger.LogInformation("ShowChangeStatusModal: Current status = {CurrentStatus}", ticket.Status);
        }
    }

    private void HideChangeStatusModal()
    {
        showChangeStatusModal = false;
        changeStatusForm = new ChangeStatusFormModel();
    }

    private void HandleStatusModalBackdropClick()
    {
        HideChangeStatusModal();
    }

    private async Task ChangeStatus()
    {
        if (ticket == null) return;

        isChangingStatus = true;
        try
        {
            Logger.LogInformation("ChangeStatus: Attempting to change status from {OldStatus} to {NewStatus}", 
                ticket.Status, changeStatusForm.Status);

            var updateDto = new UpdateTicketStatusDto
            {
                Status = Enum.Parse<TicketManagement.Core.Enums.TicketStatus>(changeStatusForm.Status)
            };

            var response = await ApiClient.UpdateTicketStatusAsync(TicketId, updateDto);
            Logger.LogInformation("ChangeStatus API response: Success = {Success}, Message = {Message}", 
                response?.Success, response?.Message);

            if (response?.Success == true)
            {
                Logger.LogInformation("Status changed successfully, reloading ticket");
                HideChangeStatusModal();
                await LoadTicket();
            }
            else
            {
                Logger.LogWarning("Status change failed: {Message}", response?.Message ?? "Unknown error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error changing status for ticket {TicketId} from {OldStatus} to {NewStatus}", 
                TicketId, ticket.Status, changeStatusForm.Status);
        }
        finally
        {
            isChangingStatus = false;
        }
    }

    private void ShowChangePriorityModal()
    {
        if (ticket != null)
        {
            changePriorityForm = new ChangePriorityFormModel
            {
                Priority = ticket.Priority.ToString()
            };
            showChangePriorityModal = true;
        }
    }

    private void HideChangePriorityModal()
    {
        showChangePriorityModal = false;
        changePriorityForm = new ChangePriorityFormModel();
    }

    private void HandlePriorityModalBackdropClick()
    {
        HideChangePriorityModal();
    }

    private async Task ChangePriority()
    {
        if (ticket == null) return;

        isChangingPriority = true;
        try
        {
            var updateDto = new UpdateTicketDto
            {
                Title = ticket.Title,
                Description = ticket.Description,
                Status = ticket.Status,
                Priority = Enum.Parse<TicketManagement.Core.Enums.TicketPriority>(changePriorityForm.Priority)
            };

            var response = await ApiClient.UpdateTicketAsync(TicketId, updateDto);
            if (response?.Success == true)
            {
                HideChangePriorityModal();
                await LoadTicket();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error changing priority for ticket {TicketId}", TicketId);
        }
        finally
        {
            isChangingPriority = false;
        }
    }

    private class EditTicketFormModel
    {
        [Required]
        [StringLength(200, MinimumLength = 1)]
        public string Title { get; set; } = string.Empty;

        [StringLength(2000)]
        public string Description { get; set; } = string.Empty;

        public string Status { get; set; } = "Open";

        public string Priority { get; set; } = "Medium";
    }

    private class AddCommentFormModel
    {
        [Required]
        [StringLength(2000, MinimumLength = 1)]
        public string Content { get; set; } = string.Empty;
    }

    private class ChangeStatusFormModel
    {
        public string Status { get; set; } = "Open";
    }

    private class ChangePriorityFormModel
    {
        public string Priority { get; set; } = "Medium";
    }
}